<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="16dp">

        <TextView
            android:id="@+id/txt_nama_aoc"
            android:textColor="@color/font"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"/>

        <TextView
            android:textColor="@color/font"
            android:layout_marginTop="12dp"
            android:id="@+id/textCluster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nama_aoc"
            android:text="POSKO"/>

        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/txt_cluster"
            android:layout_toRightOf="@+id/textCluster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_nama_aoc"
            />

        <TextView
            android:textColor="@color/font"
            android:layout_marginTop="12dp"
            android:id="@+id/textActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_cluster"
            android:text="ACTUAL"/>

        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/txt_actual"
            android:layout_toRightOf="@+id/textActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_cluster"
            />

        <TextView
            android:textColor="@color/font"
            android:layout_marginTop="12dp"
            android:id="@+id/texttarget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textActual"
            android:text="TARGET"/>

        <TextView
            android:layout_marginTop="12dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/txt_target"
            android:layout_below="@+id/textActual"
            android:layout_toRightOf="@+id/textActual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/txt_achievement"
            android:layout_alignParentRight="true"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textSize="24sp"
            android:textColor="@color/red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/txt_achievement"
            android:src="@drawable/trending"/>

        <View
            android:layout_below="@+id/txt_target"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/light_grey"
            />


    </RelativeLayout>

</android.support.v7.widget.CardView>